" incremental search
set hlsearch
set incsearch

" line numbers
set number

" indentation - general
set autoindent
set tabstop=4
set softtabstop=0 expandtab
set shiftwidth=4 smarttab

" syntax highlighting
syntax enable
colorscheme monokai

" folding
set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=2

" cmd line suggestions
set wildmenu

" show in-progress cmds
set showcmd

